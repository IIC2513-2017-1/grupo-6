
<h1>Reviews</h1>
 <a class="new-button" href=new_review_path>Add New Review</a>
 <br><br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Content</th>
      <th>Score</th>
      <th>Product ID</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.id %></td>
        <td><%= review.content %></td>
        <td><%= review.score %></td>
        <td><%= review.product_id %></td>
        <td><%= review.user_id %></td>
        <td><%= link_to fa_icon("search"), review %></td>
        <td><%= link_to fa_icon("edit"), edit_review_path(review) %></td>
        <td><%= link_to fa_icon("trash-o"), review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>