
<h1>Orders</h1>
  <% if admin? %>
 <a class="new-button" href=<%=new_order_path%>>Add New Order</a>
 <br><br>
 <% end %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Status</th>
      <th>Creation Date</th>
      <% if admin? %>
      <th>User ID</th>
        <th colspan="3"></th>
      <% else %>
        <th colspan="1"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.status %></td>
        <td><%= order.created_at %></td>
        <% if admin? %>
          <td><%= order.user_id %></td>
        <% end %>
          <td><%= link_to fa_icon("search"), order %></td>
        <% if admin? %>
          <td><%= link_to fa_icon("edit"), edit_order_path(order) %></td>
          <td><%= link_to fa_icon("trash-o"), order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
