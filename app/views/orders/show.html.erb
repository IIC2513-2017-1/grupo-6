

<p>
  <strong>ID:</strong>
  <%= @order.id %>
</p>

<p>
  <strong>Status:</strong>
  <%= @order.status %>
</p>

<p>
  <strong>Creation Date:</strong>
  <%= @order.created_at %>
</p>

<p>
  <strong>User ID:</strong>
  <%= @order.user_id %>
</p>

<table>
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Product Name</th>
      <th>Quantity</th>
      <th>Price per Unit</th>
      <th>Total Price</th>
    </tr>
  </thead>

  <tbody>
    <% @ordered_products.each do |o| %>
      <tr>
        <td><%= o.product.id %></td>
        <td><%= o.product.name %></td>
        <td><%= o.quantity %></td>
        <td>$<%= o.product.prize %></td>
        <td>$<%= o.product.prize * o.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <strong> Total: $<strong>
  <%= @total %>
</p>

<% if admin? %>
  <%= link_to 'Edit', edit_order_path(@order) %>
<% end %>
