
<h1>Users</h1>
 <a class="new-button" href=new_product_path>Add New User</a>
 <br><br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Username</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Is admin</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.address %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.is_admin %></td>
        <td><%= user.password %></td>
        <td><%= link_to fa_icon("search"), user %></td>
        <td><%= link_to fa_icon("edit"), edit_user_path(user) %></td>
        <td><%= link_to fa_icon("trash-o"), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>