
<div id="wrap" class="user-info">

<h2> Your Account </h2>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Name:</strong>
  <%= "#{@user.name} #{@user.last_name}" %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p> <strong> Mailing Information: </strong> <p>

<p class="indented">
  <strong>Address:</strong>
  <%= @user.address %>
</p>

<p class="indented">
  <strong>Phone number:</strong>
  <%= @user.phone_number %>
</p>

<br>

<%= link_to 'Edit Account Information', edit_user_path(@user) %>

</div>