
<h1>Comments</h1>
 <a class="new-button" href=new_question_path>Add New Comment</a>
 <br><br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Content</th>
      <th>User ID</th>
      <th>Review ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.content %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.review_id %></td>
        <td><%= link_to fa_icon("search"), comment %></td>
        <td><%= link_to fa_icon("edit"), edit_comment_path(comment) %></td>
        <td><%= link_to fa_icon("trash-o"), comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
