
<h1>Coupons</h1>
 <a class="new-button" href=new_coupon_path>Add New Coupon</a>
 <br><br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Code</th>
      <th>Kind</th>
      <th>Discount</th>
      <th>Redeems available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.id %></td>
        <td><%= coupon.code %></td>
        <td><%= coupon.kind %></td>
        <td><%= coupon.discount %></td>
        <td><%= coupon.redeems_available %></td>
        <td><%= link_to fa_icon("search"), coupon %></td>
        <td><%= link_to fa_icon("edit"), edit_coupon_path(coupon) %></td>
        <td><%= link_to fa_icon("trash-o"), coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
