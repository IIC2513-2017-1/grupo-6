<h1>Questions</h1>
 <a class="new-button" href=new_question_path>Add New Question</a>
 <br><br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Content</th>
      <th>Product ID</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.content %></td>
        <td><%= question.product_id %></td>
        <td><%= question.user_id %></td>
        <td><%= link_to fa_icon("search"), question %></td>
        <td><%= link_to fa_icon("edit"), edit_question_path(question) %></td>
        <td><%= link_to fa_icon("trash-o"), question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
