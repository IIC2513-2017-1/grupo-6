<div id="wrap">
<h2> Welcome to Virtual Store! </h2>
 
  

<div class="product-single offer-carrousel">
  <div class="product-carrousel">
    <div id="slider-wrap">
      <ul class="slides" id="offer-slides">

            <li><a href= <%= product_path(2) %> class= "carrousel-link" ><%= image_tag "oferta1.jpg", class:"carrousel-image" %></a></li> 
            <li><a href= <%= product_path(3) %> class= "carrousel-link" ><%= image_tag "oferta2.jpg", class:"carrousel-image" %></a></li> 
            <li><%= image_tag "oferta3.jpg", class:"carrousel-image" %></li> 
          </ul>
          <ul class="nav-dots">
                <li class="active"></li>
                <li></li>
                <li></li>
      </ul>
    </div>
  </div>
</div>
<div class="home-products">
  <div id="wrap">

    <h2>Featured products</h2>

    <div id="columns" class="columns_4">

    <% @products_category.each do |(category, product_list)| %>
      <h3> <%= category.name %> </h3>
    <% product_list.each do |product| %>
        <%= render partial: 'products/card', locals: {product: product} %>
      <% end %>

    <% end %>
    
  </div>
</div>