<h1>Tags</h1>
 <a class="new-button" href=<%=new_tag_path%>>Add New Tag</a>
 <br><br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= tag.name %></td>
        <td><%= link_to fa_icon("search"), tag %></td>
        <td><%= link_to fa_icon("edit"), edit_tag_path(tag) %></td>
        <td><%= link_to fa_icon("trash-o"), tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>