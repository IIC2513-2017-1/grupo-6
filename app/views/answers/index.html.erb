
<h1>Answers</h1>
 <a class="new-button" href=new_question_path>Add New Answer</a>
 <br><br>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Content</th>
      <th>Question ID</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.id %></td>
        <td><%= answer.content %></td>
        <td><%= answer.question_id %></td>
        <td><%= answer.user_id %></td>
        <td><%= link_to fa_icon("search"), answer %></td>
        <td><%= link_to fa_icon("edit"), edit_answer_path(answer) %></td>
        <td><%= link_to fa_icon("trash-o"), answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
